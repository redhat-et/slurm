# slurmdbd.conf - Slurm Database Daemon configuration file
# Generated by Ansible

AuthType=auth/munge
DbdHost={{ hostvars[groups['slurm_controller'][0]].node_name }}
DbdPort=6819
SlurmUser={{ slurm_user }}
DebugLevel=info
LogFile=/var/log/slurm/slurmdbd.log
PidFile=/var/run/slurmdbd.pid

# Database connection
StorageType=accounting_storage/mysql
StorageHost=localhost
StoragePort=3306
StorageUser=slurm
StoragePass={{ slurm_db_password }}
StorageLoc=slurm_acct_db

# Archive settings
ArchiveEvents=yes
ArchiveJobs=yes
ArchiveResvs=yes
ArchiveSteps=no
ArchiveSuspend=no
ArchiveTXN=no
ArchiveUsage=no
